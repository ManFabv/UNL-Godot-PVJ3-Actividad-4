[gd_resource type="Shader" format=2]

[resource]
code = "shader_type canvas_item;

uniform vec4 tint_color : hint_color = vec4(0.5, 0.5, 0.5, 1.0);
uniform float tint_apply_treshold : hint_range(0.1, 1.0) = 0.75;
uniform bool apply_tint = false;

void fragment()
{
	vec4 pixel_color = texture(TEXTURE, UV);
	
	float brightness = (pixel_color.r + pixel_color.g + pixel_color.b) / 3.0;
	vec4 grayscale = vec4(brightness, brightness, brightness, pixel_color.a);
	
	if(apply_tint && brightness <= tint_apply_treshold)
	{
		COLOR = grayscale * tint_color;
	}
	else
	{
		COLOR = pixel_color;
	}
}
"
